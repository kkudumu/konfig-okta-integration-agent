# Database Configuration
DATABASE_URL=postgresql://konfig:konfig_dev_password@localhost:5432/konfig
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Okta API Configuration
OKTA_DOMAIN=your-domain.okta.com
OKTA_API_TOKEN=your-okta-api-token
OKTA_RATE_LIMIT_MAX_REQUESTS=1000
OKTA_RATE_LIMIT_WINDOW_SECONDS=60

# LLM Provider Configuration
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.1

# LangSmith (for tracing and monitoring)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=konfig-development

# Security Configuration
SECRET_KEY=your-secret-key-min-32-chars-long
ENCRYPTION_KEY=your-encryption-key-32-bytes
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Vault Configuration (for secrets management)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your-vault-token
VAULT_MOUNT_POINT=secret

# Web Interface Configuration
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_RELOAD=true
WEB_WORKERS=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/konfig.log
STRUCTURED_LOGGING=true

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_TIMEOUT_MS=30000
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080
BROWSER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Agent Configuration
AGENT_MAX_ITERATIONS=50
AGENT_TIMEOUT_SECONDS=1800
AGENT_MEMORY_WINDOW=10
AGENT_SELF_HEALING_ENABLED=true
AGENT_HITL_ENABLED=true

# Notification Configuration
SLACK_WEBHOOK_URL=your-slack-webhook-url
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM_ADDRESS=noreply@konfig.ai

# Performance Configuration
MAX_CONCURRENT_JOBS=5
TASK_QUEUE_BACKEND=redis
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Development Configuration
ENVIRONMENT=development
DEBUG=true
TESTING=false
DEVELOPMENT_MODE=true

# Production Configuration (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# WEB_RELOAD=false
# WEB_WORKERS=4
# BROWSER_HEADLESS=true
# LOG_LEVEL=WARNING

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8080
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Feature Flags
FEATURE_LEARNING_MODULE=true
FEATURE_SELF_HEALING=true
FEATURE_ADVANCED_PLANNING=true
FEATURE_MULTI_TENANT=false